{
  "name": "@casoon/tailwindcss-effects",
  "version": "0.8.5",
  "description": "Complete collection of animation and UI effects for Tailwind CSS v4 - Available in 70KB Core and 144KB Full variants",
  "type": "module",
  "exports": {
    ".": {
      "default": "./index.js"
    },
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css",
    "./styles.css": "./dist.css",
    "./styles.min.css": "./dist.min.css",
    "./core.css": "./core.css",
    "./core.min.css": "./dist.core.min.css"
  },
  "main": "./index.js",
  "module": "./index.js",
  "style": "./dist.css",
  "sideEffects": [
    "./index.js",
    "./dist.css",
    "./dist.min.css"
  ],
  "scripts": {
    "build": "postcss src/styles/index.css -o dist.css",
    "build:core": "postcss src/styles/core.css -o dist.core.css",
    "build:all": "npm run build && npm run build:core",
    "build:dev": "postcss src/styles/index.css -o dist.css --watch",
    "minify": "node ../../scripts/minify-css.mjs",
    "minify:core": "cat dist.core.css | tr -d '\n' | sed 's/  */ /g' > dist.core.min.css",
    "validate": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run build:all && npm run minify && npm run minify:core && npm run validate"
  },
  "files": [
    "dist.css",
    "dist.min.css",
    "dist.core.css",
    "dist.core.min.css",
    "index.css",
    "core.css",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@casoon/tailwindcss-animations": "^0.8.5",
    "@casoon/tailwindcss-glass": "^0.8.5",
    "@casoon/tailwindcss-gradients": "^0.8.5",
    "@casoon/tailwindcss-loading": "^0.8.5",
    "@casoon/tailwindcss-micro-interactions": "^0.8.5",
    "@casoon/tailwindcss-navigation": "^0.8.5",
    "@casoon/tailwindcss-orbs": "^0.8.5",
    "@casoon/tailwindcss-scroll": "^0.8.5",
    "@casoon/tailwindcss-utilities": "^0.8.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1"
  }
}
