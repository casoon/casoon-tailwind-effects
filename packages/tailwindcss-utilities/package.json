{
  "name": "@casoon/tailwindcss-utilities",
  "version": "0.9.0",
  "description": "Complete utility system for Tailwind CSS v4 - Essential layout, accessibility, and UI utilities with tree-shaking",
  "type": "module",
  "exports": {
    ".": "./dist.css",
    "./index.css": "./src/index.css",
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css"
  },
  "main": "./dist.css",
  "files": [
    "src/index.css",
    "dist.css",
    "dist.min.css",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tailwindcss",
    "css",
    "utilities",
    "design-system",
    "accessibility",
    "components",
    "layout",
    "ui"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "npx tailwindcss -i ./src/index.css -o ./dist.css --content './build-reference.html'",
    "validate": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run build && npm run validate",
    "minify": "node ../../scripts/minify-css.mjs",
    "build:all": "npm run build && npm run minify",
    "test": "npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/tailwind-effects.git",
    "directory": "packages/tailwindcss-utilities"
  },
  "bugs": {
    "url": "https://github.com/casoon/tailwind-effects/issues"
  },
  "homepage": "https://github.com/casoon/tailwind-effects/tree/main/packages/tailwindcss-utilities#readme"
}