{
  "name": "@casoon/tailwindcss-utilities",
  "version": "0.7.3",
  "description": "Utility CSS classes for Tailwind CSS v4",
  "type": "module",
  "exports": {
    ".": "./dist.css",
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css"
  },
  "main": "./dist.css",
  "files": [
    "dist.css",
    "dist.min.css",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "validate": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run minify && npm run validate",
    "minify": "node ../../scripts/minify-css.mjs"
  }
}
