{
  "name": "@casoon/tailwindcss-gradients",
  "version": "0.8.5",
  "description": "Beautiful gradient utilities for Tailwind CSS v4",
  "type": "module",
  "exports": {
    ".": "./dist.css",
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css"
  },
  "main": "./dist.css",
  "style": "./dist.css",
  "files": [
    "dist.css",
    "dist.min.css",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "npx tailwindcss -i ./src/index.css -o ./dist.css --minify",
    "validate": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run build && npm run validate",
    "minify": "node ../../scripts/minify-css.mjs"
  }
}
