{
  "name": "@casoon/tailwindcss-glass",
  "version": "0.7.3",
  "description": "Glass morphism components and utilities for Tailwind CSS v4",
  "type": "module",
  "exports": {
    ".": "./dist.css",
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css"
  },
  "main": "./dist.css",
  "files": [
    "dist.css",
    "dist.min.css",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node ../../scripts/validate-css.mjs",
    "test:classes": "echo 'Classes extracted during CSS validation'",
    "test:compatibility": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run minify && npm run validate",
    "preversion": "npm run test:compatibility",
    "validate": "node ../../scripts/validate-css.mjs",
    "minify": "node ../../scripts/minify-css.mjs"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
