{
  "name": "@casoon/tailwindcss-core",
  "version": "0.9.1",
  "description": "Complete foundation package for Tailwind CSS v4 - Core utilities, forms, cards, navigation, scroll effects, gradients, loading states, micro interactions, advanced typography with prose styles, and accessibility components for modern web applications",
  "type": "module",
  "exports": {
    ".": "./index.css",
    "./index.css": "./index.css",
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css"
  },
  "main": "./dist.css",
  "style": "./dist.css",
  "files": [
    "src/",
    "index.css",
    "dist.css",
    "dist.min.css",
    "build-reference.html",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npx tailwindcss -i ./src/index.css -o ./dist.css --content './build-reference.html'",
    "build:watch": "npx tailwindcss -i ./src/index.css -o ./dist.css --content './build-reference.html' --watch",
    "minify": "node ../../scripts/minify-css.mjs",
    "validate": "node ../../scripts/validate-css.mjs",
    "test": "npm run build && npm run validate",
    "prepublishOnly": "npm run test && npm run minify"
  },
  "keywords": [
    "tailwindcss",
    "css",
    "utilities",
    "forms",
    "cards",
    "navigation",
    "navbar",
    "tabs",
    "breadcrumbs",
    "drawer",
    "scroll",
    "scroll-snap",
    "scrollbar",
    "scroll-reveal",
    "smooth-scroll",
    "gradients",
    "loading",
    "spinner",
    "skeleton",
    "progress",
    "overlays",
    "interactions",
    "hover",
    "focus",
    "transitions",
    "backgrounds",
    "animations",
    "typography",
    "prose",
    "blog",
    "marketing",
    "documentation",
    "text-effects",
    "foundation",
    "core",
    "accessibility",
    "ui",
    "components",
    "tailwind-v4"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/tailwindcss-effects.git",
    "directory": "packages/tailwindcss-core"
  },
  "bugs": {
    "url": "https://github.com/casoon/tailwindcss-effects/issues"
  },
  "homepage": "https://github.com/casoon/tailwindcss-effects/tree/master/packages/tailwindcss-core#readme"
}
