{
  "name": "@casoon/tailwindcss-orbs",
  "version": "0.9.0",
  "description": "Comprehensive orb/blob visual effects for Tailwind CSS v4 - Animated orbs, background effects, interactive components, and glassmorphism elements with advanced motion and visual effects",
  "type": "module",
  "exports": {
    ".": "./dist.css",
    "./index.css": "./src/index.css",
    "./dist.css": "./dist.css",
    "./orb.js": "./orb.js",
    "./dist.min.css": "./dist.min.css"
  },
  "files": [
    "src/index.css",
    "dist.css",
    "dist.min.css",
    "README.md",
    "LICENSE",
    "orb.js"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "keywords": [
    "tailwindcss",
    "css",
    "orbs",
    "blobs",
    "animations",
    "backgrounds",
    "effects",
    "glassmorphism",
    "acrylic",
    "interactive",
    "motion",
    "floating",
    "morphing",
    "shimmer",
    "glow",
    "visual-effects",
    "ui",
    "components",
    "tailwind-v4"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "npx tailwindcss -i ./src/index.css -o ./dist.css --content './build-reference.html'",
    "build:dev": "tailwindcss -i src/styles/index.css -o dist.css --watch",
    "validate": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run build && npm run minify && npm run validate",
    "minify": "node ../../scripts/minify-css.mjs"
  }
}
