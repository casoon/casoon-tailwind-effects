{
  "name": "@casoon/tailwindcss-orbs",
  "version": "0.8.2",
  "description": "Orb/blob visual effects for Tailwind CSS v4",
  "type": "module",
  "exports": {
    ".": "./dist.css",
    "./dist.css": "./dist.css",
    "./dist.min.css": "./dist.min.css"
  },
  "main": "./dist.css",
  "files": [
    "dist.css",
    "dist.min.css",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "tailwindcss -i src/styles/index.css -o dist.css --minify",
    "build:dev": "tailwindcss -i src/styles/index.css -o dist.css --watch",
    "validate": "node ../../scripts/validate-css.mjs",
    "prepublishOnly": "npm run build && npm run minify && npm run validate",
    "minify": "node ../../scripts/minify-css.mjs"
  }
}
