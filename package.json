{
  "name": "casoon-tailwind-effects",
  "private": true,
  "version": "0.4.6",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "license": "MIT",
  "scripts": {
    "release": "node scripts/release.mjs",
    "release:all": "node scripts/release.mjs all",
    "release:dry": "DRY_RUN=1 node scripts/release.mjs all",
    "test": "node scripts/verify-css.mjs && node scripts/verify-deps.mjs && node scripts/verify-prefixes.mjs && node scripts/verify-tokens.mjs && node scripts/verify-dark.mjs",
    "verify:tokens": "node scripts/verify-tokens.mjs",
    "verify:dark": "node scripts/verify-dark.mjs",
    "version:patch": "node scripts/bump-version.mjs patch",
    "version:minor": "node scripts/bump-version.mjs minor",
    "version:major": "node scripts/bump-version.mjs major",
    "version:check": "npm run version:check:packages && npm run version:check:root",
    "version:check:packages": "node scripts/check-versions.mjs",
    "version:check:root": "echo 'Root version:' && npm version --dry-run"
  }
}
