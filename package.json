{
  "name": "casoon-tailwind-effects",
  "private": true,
  "version": "0.9.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "license": "MIT",
  "scripts": {
    "test": "node scripts/validate-css.mjs",
    "validate": "node scripts/validate-css.mjs",
    "validate:pre-publish": "node scripts/validate-css.mjs",
    "build:dist": "node scripts/build-dist.mjs",
    "build:effects": "node scripts/build-effects.mjs",
    "build:packages": "node scripts/build-all-packages.mjs",
    "build:all": "pnpm run build:packages && pnpm run build:effects",
    "minify": "node scripts/minify-css.mjs",
    "minify:all": "node scripts/minify-css.mjs",
    "prebuild": "pnpm run build:all && pnpm run minify:all",
    "version:patch": "node scripts/bump-version.mjs patch",
    "version:minor": "node scripts/bump-version.mjs minor",
    "version:major": "node scripts/bump-version.mjs major",
    "prepublish": "pnpm run validate:pre-publish && pnpm run prebuild",
    "release:all": "pnpm run prepublish && echo 'Use pnpm publish -r for publishing all packages'",
    "dev": "cd test-project-v4 && npm run dev",
    "build:test": "cd test-project-v4 && npm run build",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.13",
    "tailwindcss": "4.1.13"
  }
}
